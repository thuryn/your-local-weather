<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/widget_more_3x3.widget_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <LinearLayout
        android:id="@+id/widget_more_3x3.settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/swipe_red"
        android:orientation="horizontal">

        <ImageView android:id="@+id/widget_more_3x3.button_location_setting"
            android:layout_width="@dimen/widget_refresh_icon_size"
            android:layout_height="@dimen/widget_refresh_icon_size"
            android:scaleType="fitXY"
            android:src="@drawable/ic_my_location_black_24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/widget_graph_settings_button"
            android:paddingLeft="@dimen/widget_refresh_icon_padding_top"
            android:paddingStart="@dimen/widget_refresh_icon_padding_top"
            android:paddingTop="@dimen/widget_refresh_icon_padding_top"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_more_3x3.header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_more_3x3.settings_layout"
        android:background="@color/widget_darkTheme_window_colorBackground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_more_3x3.widget_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/widget_3x3_text_size"/>

        <TextView
            android:id="@+id/widget_more_3x3.widget_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/widget_3x3_text_size"
            android:textColor="@color/textColorPrimary"/>

        <ImageView android:id="@+id/widget_more_3x3.widget_button_refresh"
            android:layout_width="@dimen/widget_refresh_icon_size"
            android:layout_height="@dimen/widget_refresh_icon_size"
            android:scaleType="fitXY"
            android:src="@drawable/ic_refresh_white_18dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/widget_refresh_button"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:paddingTop="@dimen/widget_refresh_icon_padding_top"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_more_3x3.header_layout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/widget_more_3x3.widget_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/widget_main_temperature_text_size"/>
                <TextView
                    android:id="@+id/widget_more_3x3.widget_second_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/widget_3x3_text_size"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/widget_more_3x3.widget_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/widget_3x3_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/widget_more_3x3.widget_wind_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/widget_more_3x3.widget_wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/widget_more_3x3.widget_humidity_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/widget_more_3x3.widget_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/widget_more_3x3.widget_pressure_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/widget_more_3x3.widget_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/widget_more_3x3.widget_clouds_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/widget_more_3x3.widget_clouds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/widget_more_3x3.widget_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.3"
            android:contentDescription="@string/widget_weather_icon_description"/>
    </LinearLayout>

</RelativeLayout>