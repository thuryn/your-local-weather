<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget_weather_forecast_1x3.widget_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <LinearLayout
        android:id="@+id/widget_weather_forecast_1x3.settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/swipe_red"
        android:orientation="horizontal">

        <ImageView android:id="@+id/widget_weather_forecast_1x3.button_days_setting"
            android:layout_width="@dimen/widget_refresh_icon_size"
            android:layout_height="@dimen/widget_refresh_icon_size"
            android:scaleType="fitXY"
            android:src="@drawable/ic_daily_forecast_dark_24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/widget_graph_settings_button"
            android:paddingLeft="@dimen/widget_refresh_icon_padding_top"
            android:paddingStart="@dimen/widget_refresh_icon_padding_top"
            android:paddingTop="@dimen/widget_refresh_icon_padding_top"
            android:gravity="top"/>

        <ImageView android:id="@+id/widget_weather_forecast_1x3.button_location_setting"
            android:layout_width="@dimen/widget_refresh_icon_size"
            android:layout_height="@dimen/widget_refresh_icon_size"
            android:scaleType="fitXY"
            android:src="@drawable/ic_my_location_black_24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/widget_location_settings_button"
            android:paddingLeft="@dimen/widget_refresh_icon_padding_top"
            android:paddingStart="@dimen/widget_refresh_icon_padding_top"
            android:paddingTop="@dimen/widget_refresh_icon_padding_top"
            android:gravity="top"/>

        <ImageView android:id="@+id/widget_weather_forecast_1x3.button_action_setting"
            android:layout_width="@dimen/widget_refresh_icon_size"
            android:layout_height="@dimen/widget_refresh_icon_size"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_settings"
            android:background="@android:color/transparent"
            android:contentDescription="@string/widget_action_settings_button"
            android:paddingLeft="@dimen/widget_refresh_icon_padding_top"
            android:paddingStart="@dimen/widget_refresh_icon_padding_top"
            android:paddingTop="@dimen/widget_refresh_icon_padding_top"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_weather_forecast_1x3.main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/widget_weather_forecast_1x3.settings_layout">

        <TextView
            android:id="@+id/widget_weather_forecast_1x3.widget_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="2"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/widget_3x3_text_size"/>

        <LinearLayout
            android:id="@+id/widget_weather_forecast_1x3.forecast_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/widget_weather_forecast_1x3.forecast_day_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/widget_forecast_day_padding"
                android:paddingRight="@dimen/widget_forecast_day_padding">
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_1_widget_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
                <ImageView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_1_widget_icon"
                    android:layout_width="@dimen/widget_forecast_icon_size"
                    android:layout_height="@dimen/widget_forecast_icon_size"
                    android:scaleType="fitXY"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/widget_weather_icon_description"/>
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_1_widget_temperatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/widget_weather_forecast_1x3.forecast_day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/widget_forecast_day_padding"
                android:paddingRight="@dimen/widget_forecast_day_padding">
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_2_widget_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
                <ImageView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_2_widget_icon"
                    android:layout_width="@dimen/widget_forecast_icon_size"
                    android:layout_height="@dimen/widget_forecast_icon_size"
                    android:scaleType="fitXY"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/widget_weather_icon_description"/>
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_2_widget_temperatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/widget_weather_forecast_1x3.forecast_day_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/widget_forecast_day_padding"
                android:paddingRight="@dimen/widget_forecast_day_padding">
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_3_widget_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
                <ImageView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_3_widget_icon"
                    android:layout_width="@dimen/widget_forecast_icon_size"
                    android:layout_height="@dimen/widget_forecast_icon_size"
                    android:scaleType="fitXY"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/widget_weather_icon_description"/>
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_3_widget_temperatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/widget_weather_forecast_1x3.forecast_day_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/widget_forecast_day_padding"
                android:paddingRight="@dimen/widget_forecast_day_padding">
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_4_widget_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
                <ImageView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_4_widget_icon"
                    android:layout_width="@dimen/widget_forecast_icon_size"
                    android:layout_height="@dimen/widget_forecast_icon_size"
                    android:scaleType="fitXY"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/widget_weather_icon_description"/>
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_4_widget_temperatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/widget_weather_forecast_1x3.forecast_day_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/widget_forecast_day_padding"
                android:paddingRight="@dimen/widget_forecast_day_padding">
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_5_widget_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
                <ImageView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_5_widget_icon"
                    android:layout_width="@dimen/widget_forecast_icon_size"
                    android:layout_height="@dimen/widget_forecast_icon_size"
                    android:scaleType="fitXY"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/widget_weather_icon_description"/>
                <TextView
                    android:id="@+id/widget_weather_forecast_1x3.forecast_5_widget_temperatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/widget_3x3_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
